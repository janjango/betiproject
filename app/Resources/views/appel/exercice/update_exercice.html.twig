{% extends "home/layout.html.twig" %}
{% block stylesheet %}

{% endblock %}
 {% block titletopmeu %}
     <li>Appel</li>
     <li><a href="{{ path('read_exercice')}}">Exercices</a></li>
     <li><a href="{{ path('update_exercice',{'id': id } )}}">Modification</a></li>
 {% endblock %}
 {% block content %}
<div class="row">
    <div class="block col-sm-6 col-sm-offset-2">
         <!-- Normal Form Title -->
         <div class="block-title">
             <div class="block-options pull-right">
                 <a href="{{ path('read_exercice')}}" class="btn btn-alt btn-sm btn-default toggle-bordered enable-tooltip" >Retour</a>
             </div>
             <h2><strong>Modifier Exercice</strong> </h2>
         </div>
         <!-- END Normal Form Title -->

         <!-- Normal Form Content -->
         <form action="{{ path('update_exercice',{'id': id } )}}" method="post" class="form-bordered">

             <div class="form-group">
                 {{ form_widget(form) }}
                 {{ form_rest(form) }}
             </div>
             <div class="form-group form-actions">
                 <button type="submit" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> Modifier</button>
                 <button type="reset" class="btn btn-sm btn-default"><i class="fa fa-repeat"></i> Annuler</button>
             </div>
         </form>
         <!-- END Normal Form Content -->
     </div>
</div>
 {% endblock %}
