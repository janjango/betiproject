{% extends "home/layout.html.twig" %}
{% block stylesheet %}

{% endblock %}
 {% block titletopmeu %}
     <li>Appel</li>
     <li><a href="{{ path('read_appel')}}">Appels</a></li>
     <li><a href="{{ path('create_appel')}}">Enregistrement</a></li>
 {% endblock %}
 {% block content %}
<div class="row">
    <div class="block">
    <!-- Normal Form Title -->
    <div class="block-title">
        <div class="block-options pull-right">
            <a href="{{ path('read_appel',{'exercice': exercice})}}" class="btn btn-alt btn-sm btn-default toggle-bordered enable-tooltip" >Retour</a>
        </div>
        <h2><strong>Nouveau document d'appel</strong> </h2>

    </div>
    <!-- END Normal Form Title -->

    <!-- Normal Form Content -->
    <form action="{{ path('create_appel')}}" method="post" class="form-bordered">

        <div class="form-group">
            {{ form_widget(form) }}
            {{ form_rest(form) }}
        </div>
        <div class="form-group form-actions">
            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Enregistrer</button>
            <button type="reset" class="btn btn-sm btn-warning"><i class="fa fa-repeat"></i> Annuler</button>
        </div>
    </form>
    <!-- END Normal Form Content -->
</div>
</div>
 {% endblock %}
{% block customjavascript %}
    <script>
        $("#appbundle_appel_beneficiaire").change(function () {
            var k = $(this);
            $("#afficherbeneficiaire").remove();
            $.ajax({
                type: 'GET',
                url: "{{ path('selectinfo_beneficiaire')}}",
                cache: false,
                data : 'id=' + k.val(),
                success: function (data) {
                   // alert(data);
                    k.parent().after(data);
                    // location.reload();
                },
                error: function () {
                }
            });
        });

        $('#appbundle_appel_montantHt').keypress(function () {
            $('#appbundle_appel_montantTtc').val($(this).val()*1.18);
        })
        $('#appbundle_appel_montantHt').keydown(function () {
            $('#appbundle_appel_montantTtc').val($(this).val()*1.18);
        })

        $("#appbundle_appel_sourceAlimaentation").change(function () {
            if( $(this).val()=='one'){
                // alert('ok');
                $("#appbundle_appel_refEngagement").parent().show();
                $("#appbundle_appel_dateEngagement").parent().show();
                $("#appbundle_appel_refBordereau").parent().show();
                $("#appbundle_appel_dateBordereau").parent().show();
            }else{
                // alert('ok');
                $("#appbundle_appel_refEngagement").parent().hide();
                $("#appbundle_appel_dateEngagement").parent().hide();
                $("#appbundle_appel_refBordereau").parent().hide();
                $("#appbundle_appel_dateBordereau").parent().hide();
            }

        })

    </script>
{% endblock %}