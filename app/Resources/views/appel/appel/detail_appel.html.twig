<div id="modal-regular1{{ element.id }}" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="#" method="post" >
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="modal-title text-left">Détails</h3>
            </div>
                <div class="modal-body">
                    <div class="text-left">
                        <span  style="text-decoration: underline;font-weight: bold;color: #0a7a60;">  INFORMATIONS SUR LE DOCUMENT D'APPEL DE FONDS  : </span> <br>
                        {% if element.referenceAppel  %} Référence Mandat émis : <strong>{{ element.referenceAppel }}</strong>  | {% endif %}
                        {% if element.referenceAppelfond  %} Référence Appel de fonds : <strong>{{ element.referenceAppelfond }}</strong>  | {% endif %}
                        Date Emission : <strong>{{ element.dateAppel|date('d/m/Y') }}</strong><br>

                        {% if element.refEngagement  %} <br>  Référence Engagement: <strong>{{ element.refEngagement }}</strong>  |
                        Date Engagement : <strong>{{ element.dateEngagement|date('d/m/Y') }}</strong><br>  {% endif %}

                        {% if element.refBordereau  %}  Référence Bordereau: <strong>{{ element.refBordereau }}</strong>  |
                        Date Bordereau : <strong>{{ element.dateBordereau|date('d/m/Y') }}</strong><br>  {% endif %}

                        {% if element.compte %} Numéro du compte trésor : <strong> {{ element.compte.numero  }}  </strong>  |
                       Intitulé du compte Trésor : <strong> {{ element.compte.intitule }}  </strong> <br>  {% endif %}

                        {% if element.comptebancaire %} Numéro du compte bancaire : <strong> {{ element.comptebancaire.numero  }}  </strong>  |
                        Intitulé du compte bancaire : <strong> {{ element.comptebancaire.intitule }} | </strong>
                        Institution bancaire : <strong> {{ element.comptebancaire.institution}} | </strong><br> {% endif %}

                        Montant de l'appel: <strong>{{ element.montantTtc|number_format(2, ',', '.') }}</strong>  francs CFA <br><br>

                        <span  style="text-decoration: underline;font-weight: bold;color: #0a7a60;">  INFORMATIONS SUR LA STRUCTURE BENEFICIAIRE  : </span> <br>
                        Nom : <strong>{% if element.beneficiaire is not null %} {{ element.beneficiaire.libBeneficiaire }}  {% endif %}</strong>  |
                        {% if element.beneficiaire.code  %}  Code : <strong>{{ element.beneficiaire.code }}  </strong> | {% endif %}
                        {% if element.beneficiaire.sigle  %} Sigle : <strong> {{ element.beneficiaire.sigle }}  </strong>{% endif %} <br> <br>

                        <span  style="text-decoration: underline;font-weight: bold;color: #0a7a60;">  INFORMATIONS SUR LE SOLDE ET LES ENCAISSEMENTS : </span> <br>
                        Solde : <strong> {{ valsolde|number_format(2, ',', '.') }}</strong> francs CFA <br>
                        {% set mt=0 %}
                        Montant total encaissé : <strong>{% for elt in element.encaissements %}{% set mt=mt+elt.montantEncaisse %} {% endfor %}
                            {{ mt|number_format(2, ',', '.') }}</strong> francs CFA | Montant restant à encaisser : {{ (element.montantTtc-mt)|number_format(2, ',', '.') }}<br>  <br>

                        {% if element.estAnnuler==1 or element.estParentannuler==1 %} <strong style="color: #c7254e"> Opération d'annulation d'appel ...</strong> {% endif %}
                    </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </form>
        </div>
    </div>
</div>